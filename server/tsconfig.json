{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./src/typings", "./node_modules/@types"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "skipLibCheck": true


    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  